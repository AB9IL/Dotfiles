# NEWSBOAT CONFIGURATION

# refreshing and reloading
refresh-on-startup  yes
auto-reload yes
reload-time 1
reload-threads 100
max-items 1000

# web browser
browser "w3m %u"
macro m set browser "vlc %u"; open-in-browser ; set browser "w3m %u"
macro l set browser "x-www-browser %u"; open-in-browser ; set browser "w3m %u"

# unbind keys
unbind-key h
unbind-key j
unbind-key k
unbind-key l
unbind-key J
unbind-key K
unbind-key LEFT
unbind-key RIGHT
unbind-key ESC
unbind-key SPACE

# bind keys - vim style
bind-key h prev
bind-key j down
bind-key k up
bind-key l next
bind-key LEFT prev
bind-key RIGHT next
bind-key ESC quit
bind-key SPACE toggle-show-read-feeds

# colors
include /usr/share/doc/newsboat/contrib/colorschemes/nord

